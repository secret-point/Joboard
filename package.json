{
  "name": "@amzn/hvh-candidate-application-ui",
  "version": "1.0.0",
  "npm-pretty-much": {
    "ignoreCoverageData": true,
    "publishLibCommonJs": true
  },
  "files": [
    "lib/**/*"
  ],
  "dependencies": {
    "@amzn/brazil": "*",
    "@stencil-react/components": "0.7.2",
    "@stencil-react/theme-default": "0.7.2",
    "@testing-library/jest-dom": "^4.2.4",
    "@testing-library/react": "^9.3.2",
    "@testing-library/user-event": "^7.1.2",
    "@types/jest": "^24.0.0",
    "@types/node": "^12.0.0",
    "@types/react": "^16.9.0",
    "@types/react-dom": "^16.9.0",
    "@types/react-loadable": "^5.3.4",
    "katal-jsdoc2md": "1.0.0",
    "react": "^16.12.0",
    "react-dom": "^16.12.0",
    "react-scripts": "3.3.0",
    "sushi-client": "1.0.0",
    "typescript": "~3.7.2",
    "react-loadable": "^5.5.0",
    "prettier": "1.19.1"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test --watchAll=false --passWithNoTests",
    "eject": "react-scripts eject",
    "prettier": "prettier --config .prettierrc --write 'src/**/*.tsx'",
    "clean": "rm -rf build node_modules dist",
    "prepublishOnly": "CI=false npm run build && npm run copy-src",
    "copy-src": "(mkdir -p lib) && cp -r build/* lib && npm run clean-build",
    "clean-build": "rm -rf build/*"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
